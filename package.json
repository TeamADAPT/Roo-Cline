{
  "name": "nova-mini",
  "displayName": "Nova Mini",
  "description": "A fork of Cline, an autonomous coding agent, with some added experimental configuration and automation features.",
  "publisher": "TeamADAPT",
  "version": "0.0.2",
  "icon": "assets-nova-mini/fire/vscode/icon-512.png",
  "galleryBanner": {
    "color": "#617A91",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.93.1"
  },
  "author": {
    "name": "TeamADAPT"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamADAPT/nova-mini"
  },
  "homepage": "https://github.com/TeamADAPT/nova-mini",
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Education",
    "Snippets",
    "Testing"
  ],
  "keywords": [
    "nova-mini",
    "claude",
    "dev",
    "mcp",
    "openrouter",
    "coding",
    "agent",
    "autonomous",
    "chatgpt",
    "sonnet",
    "ai",
    "llama"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nova-mini-ActivityBar",
          "title": "Nova Mini",
          "icon": "assets-nova-mini/icon.png"
        }
      ]
    },
    "views": {
      "nova-mini-ActivityBar": [
        {
          "type": "webview",
          "id": "nova-mini.SidebarProvider",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "nova-mini.plusButtonClicked",
        "title": "New Task",
        "icon": "$(add)"
      },
      {
        "command": "nova-mini.mcpButtonClicked",
        "title": "MCP Servers",
        "icon": "$(server)"
      },
      {
        "command": "nova-mini.historyButtonClicked",
        "title": "History",
        "icon": "$(history)"
      },
      {
        "command": "nova-mini.popoutButtonClicked",
        "title": "Open in Editor",
        "icon": "$(link-external)"
      },
      {
        "command": "nova-mini.settingsButtonClicked",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "nova-mini.openInNewTab",
        "title": "Open In New Tab",
        "category": "Nova Mini"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nova-mini.plusButtonClicked",
          "group": "navigation@1",
          "when": "view == nova-mini.SidebarProvider"
        },
        {
          "command": "nova-mini.mcpButtonClicked",
          "group": "navigation@2",
          "when": "view == nova-mini.SidebarProvider"
        },
        {
          "command": "nova-mini.historyButtonClicked",
          "group": "navigation@3",
          "when": "view == nova-mini.SidebarProvider"
        },
        {
          "command": "nova-mini.popoutButtonClicked",
          "group": "navigation@4",
          "when": "view == nova-mini.SidebarProvider"
        },
        {
          "command": "nova-mini.settingsButtonClicked",
          "group": "navigation@5",
          "when": "view == nova-mini.SidebarProvider"
        }
      ]
    },
    "configuration": {
      "title": "Nova Mini",
      "properties": {
        "nova-mini.allowedCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "npm test",
            "npm install",
            "tsc",
            "git log",
            "git diff",
            "git show"
          ],
          "description": "Commands that can be auto-executed when 'Always Allow Execute' is enabled"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run build:webview && npm run check-types && npm run lint && node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts && npm run lint --prefix webview-ui",
    "test": "jest",
    "build:webview": "cd webview-ui && npm run build",
    "install:all": "npm install && cd webview-ui && npm install",
    "build": "npm run build:webview && npm run vsix",
    "vsix": "mkdir -p bin && npx vsce package --out bin"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.84.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/codicons": "^0.0.35",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.2",
    "@aws-sdk/client-bedrock-runtime": "^3.478.0",
    "@google/generative-ai": "^0.1.3",
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.6.2",
    "globby": "^14.0.0",
    "openai": "^4.24.1",
    "p-wait-for": "^5.0.2",
    "serialize-error": "^11.0.3",
    "strip-ansi": "^7.1.0"
  }
}
